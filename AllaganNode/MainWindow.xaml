<Window x:Class="AllaganNode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllaganNode"
        mc:Ignorable="d"
        Title="Allagan Node" Height="100" Width="100" WindowStyle="ToolWindow" Icon="/Resources/SplashScreen.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <StackPanel>
        <Image Height="360" Width="880" Source="/Resources/Logo.jpg"/>
        <ProgressBar x:Name="MainProgressBar" Height="10" Width="880" Value="50" Background="#FF323232" BorderBrush="#FF323232" Foreground="#FF32C832"/>
        <TextBlock x:Name="StatusTextBlock" Text="Allagan Node" TextWrapping="Wrap" Background="#FF323232" Foreground="#FFC8C8C8" VerticalAlignment="Center"/>
    </StackPanel>
</Window>
